<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/lentAdd"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Enter Money"
            android:inputType="number"
            android:shadowColor="#3DFF98"
            android:text="0"
            android:textColor="#000000"
            android:textColorHighlight="#FA4DFFB9"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_button" />

        <Button
            android:id="@+id/lentAddButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="64dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:clickable="false"
            android:shadowColor="@android:color/holo_blue_light"
            android:shadowDx="500"
            android:shadowDy="0"
            android:shadowRadius="500"
            android:text="ADD"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="italic"
            android:typeface="normal"
            app:layout_constraintStart_toEndOf="@+id/lentAdd"
            app:layout_constraintTop_toBottomOf="@+id/lentName" />

        <Button
            android:id="@+id/lentSubButton"
            android:layout_width="64dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:background="@color/colorAccent"
            android:text="SUB"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="italic"
            android:typeface="normal"
            app:layout_constraintStart_toEndOf="@+id/lentAdd"
            app:layout_constraintTop_toBottomOf="@+id/lentAddButton" />

        <ImageButton
            android:id="@+id/del"
            android:layout_width="55dp"
            android:layout_height="39dp"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginBottom="4dp"
            android:background="#FFFFFF"
            android:tint="#FC000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@android:drawable/ic_menu_delete" />

        <TextView
            android:id="@+id/lentMoney"
            android:layout_width="72dp"
            android:layout_height="34dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:textColor="#0EE681"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lentName"
            android:layout_width="143dp"
            android:layout_height="36dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="28dp"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/icon_button"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="31dp"
            android:layout_height="29dp"
            android:layout_marginTop="48dp"
            android:text="Rs"
            android:textColor="#0EE681"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/lentMoney"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_button"
            android:layout_width="64dp"
            android:layout_height="82dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/abstractuser" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>